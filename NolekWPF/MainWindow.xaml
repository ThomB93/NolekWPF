<Window x:Class="NolekWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:equipment="clr-namespace:NolekWPF.UserControls.Equipment"
        xmlns:viewModels="clr-namespace:NolekWPF.ViewModels"
        mc:Ignorable="d"
        Title="Nolek"
        Height="500"
        Width="600"
        ResizeMode='NoResize'
        WindowStartupLocation='CenterScreen'>

    <StackPanel>
        <DockPanel>
            <Menu x:Name="Menu" DockPanel.Dock="Top">
                <MenuItem Header="User">
                    <MenuItem Header="_Log out"></MenuItem>
                    <MenuItem x:Name="mnuExit" Header="_Exit" Click="mnuExit_Click"></MenuItem>
                </MenuItem>
                <MenuItem Header="Equipment">
                    <MenuItem x:Name="mnuEquipList" Header="_List / Update" Click="mnuEquipList_Click"></MenuItem>
                    <MenuItem x:Name="mnuEquipCreate" Header="_New Equipment" Click="mnuEquipCreate_Click"></MenuItem>
                    <MenuItem Header="_Add / Remove Components"></MenuItem>
                </MenuItem>
                <MenuItem Header="Component">
                    <MenuItem x:Name="compList" Header="_List / Update" Click="compList_Click" ></MenuItem>
                    <MenuItem Header="_New Component"></MenuItem>
                </MenuItem>
                <MenuItem Header="Customers">
                    <MenuItem Header="_List / Update"></MenuItem>
                    <MenuItem Header="_New Customer"></MenuItem>
                </MenuItem>
                <MenuItem Header="_Service Reports">
                    <MenuItem Header="_View history"></MenuItem>
                    <MenuItem Header="_New Report"></MenuItem>
                </MenuItem>
            </Menu>
        </DockPanel>
        <Border Padding="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>

                </Grid.ColumnDefinitions>
                <Frame x:Name="mainframe">
                </Frame>
            </Grid>
        </Border>
        <Grid x:Name="LoginLayer" Background="#FFFFFFFF" Grid.RowSpan="2">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Background="LightBlue">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Log in" Grid.ColumnSpan="2" FontWeight="Bold" HorizontalAlignment="Center" Margin="5" FontSize="20"/>
                    <TextBlock Text="Name" Grid.Row="1" Margin="3"/>
                    <TextBox x:Name="txtName" Grid.Row="1" Grid.Column="1" Margin="3" MinWidth="100" HorizontalAlignment="Left"/>
                    <TextBlock Text="Password" Grid.Row="2" Margin="3"/>
                    <TextBox x:Name="txtPassword"  Grid.Column="1" Grid.Row="2" Margin="3" MinWidth="100" HorizontalAlignment="Left"/>
                    <Button Click="Button_Click" Content="Log in" Grid.Row="3" Grid.Column="1" Margin="3"/>
                </Grid>
            </Grid>

    </StackPanel>



</Window>

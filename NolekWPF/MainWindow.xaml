<Window x:Class="NolekWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:equipment="clr-namespace:NolekWPF.UserControls.Equipment"
        xmlns:viewModels="clr-namespace:NolekWPF.ViewModels"
        mc:Ignorable="d"
        Title="Nolek"
        Height="386"
        Width="518"
        ResizeMode='NoResize'
        WindowStartupLocation='CenterScreen'>
    <!--Equipment data templates-->
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModels:EquipmentListViewModel}">
            <equipment:EquipmentListView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:EquipmentDetailViewModel}">
            <equipment:EquipmentDetailView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:EquipmentCreateViewModel}">
            <equipment:EquipmentCreateView />
        </DataTemplate>
    </Window.Resources>
    
    <StackPanel>
        <!--Top menu-->
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="User">
                    <MenuItem Header="_Log out"></MenuItem>
                    <MenuItem Header="_Exit"></MenuItem>
                </MenuItem>
                <MenuItem Header="Equipment">
                    <MenuItem Header="_List / Update" Command="{Binding NavCommand}" CommandParameter="equipList"></MenuItem>
                    <MenuItem Header="_New Equipment" Command="{Binding NavCommand}" CommandParameter="equipCreate"></MenuItem>
                    <MenuItem Header="_Add / Remove Components"></MenuItem>
                </MenuItem>
                <MenuItem Header="Component">
                    <MenuItem Header="_List / Update"></MenuItem>
                    <MenuItem Header="_New Component"></MenuItem>
                </MenuItem>
                <MenuItem Header="Customers">
                    <MenuItem Header="_List / Update"></MenuItem>
                    <MenuItem Header="_New Customer"></MenuItem>
                </MenuItem>
                <MenuItem Header="_Service Reports">
                    <MenuItem Header="_View history"></MenuItem>
                    <MenuItem Header="_New Report"></MenuItem>
                </MenuItem>
            </Menu>
        </DockPanel>
        
        <Border Padding="5">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                
                <ContentControl Content="{Binding CurrentViewModel}" />
            </Grid>
        </Border>
    </StackPanel>
    
</Window>
